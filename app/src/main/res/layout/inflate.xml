<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="50dp"
        android:id="@+id/item_img"
        android:background="@color/colorPrimaryDark"
        android:layout_height="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Ginger Bread"
        app:layout_constraintLeft_toRightOf="@+id/item_img"
        android:paddingLeft="10dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:id="@+id/version_name"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Api level 10"
        app:layout_constraintTop_toBottomOf="@+id/version_name"
        android:id="@+id/api_level"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        app:layout_constraintLeft_toRightOf="@+id/item_img"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>